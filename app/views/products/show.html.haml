.pure-g
  .pure-u-1
    %p#notice= notice
  .pure-u-2-5
    .img-box
      %p= image_tag(@product.image_url, class: 'pure-img img-box')
  .pure-u-2-5
    .list_description
      %p.title=  @product.title
      %p= truncate(strip_tags(@product.description), length: 180)
      %p.price= number_to_currency(@product.price)
  .pure-u-1-5
    .list-options
      %p= link_to 'Edit', edit_product_path(@product), :class => "button-small pure-button pure-button-secondary"
      %p= link_to 'Back', products_path, :class => "button-small pure-button"
