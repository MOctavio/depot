!!!
%html
  %head
    %title Depot
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{:class => controller.controller_name}
    %nav#main-menu.pure-menu.pure-menu-open.pure-menu-horizontal
      %a.pure-menu-heading Depot
      %ul.pure-menu-list
        %li.pure-menu-item
          = link_to 'Store', store_path, :class => "pure-menu-link"
        %li.pure-menu-item
          = link_to 'Products', products_path, :class => "pure-menu-link"
      %ul.pure-menu-list.cart-link
        %li.pure-menu-item
          = link_to cart_path(@cart), :class => "pure-menu-link pure-menu-selected" do
            #{fa_icon "shopping-cart"} Cart (#{pluralize @cart.items_quantity, 'item'})
        -# = link_to 'Cart', cart_path(@cart), :class => "pure-menu-link"
    = yield
